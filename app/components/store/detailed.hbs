<Jumbo>
  <h2>{{@store.title}}</h2>
  <p>Nice find! This looks like a nice place to stay near {{@store.city}}.</p>
  <a
    href='#'
    target='_blank'
    rel='external nofollow noopener noreferrer'
    class='share button'
  >
    Share on Twitter
  </a>
</Jumbo>

<article class='store detailed'>
  <store::Image
    src={{@store.image}}
    alt='A picture of {{@store.title}}'
  ></store::Image>

  <div class='details'>
    <h3>About {{@store.title}}</h3>

    <div class='detail homedelivery'>
      <span>homedelivery:</span>
      {{@store.homedelivery}}
    </div>
    <div class='detail type'>
      <span>Type:</span>
      {{@store.type}}
      â€“
      {{@store.category}}
    </div>
    <div class='detail location'>
      <span>Location:</span>
      {{@store.city}}
    </div>
    <div class='detail Rating'>
      <span>Rating:</span>
      {{@store.Rating}}
    </div>
    <div class='detail stock'>
      <span>stock:</span>
      {{@store.stock}}
    </div>
    <div class='detail description'>
      <p>{{@store.description}}</p>
    </div>
  </div>
</article>